{
  "backend": {
    "routes": {
      "decorators": [
        "path(",
        "re_path(",
        "@csrf_exempt",
        "@require_http_methods",
        "@require_GET",
        "@require_POST",
        "@require_safe"
      ],
      "decorator_patterns": [
        ".*path\\(['\"].*['\"],.*",
        ".*re_path\\(['\"].*['\"],.*"
      ]
    },
    "interface_globs": [
      "app/urls.py",
      "apps/*/urls.py",
      "*/urls.py",
      "app/views.py",
      "apps/*/views.py",
      "*/views.py"
    ],
    "service_globs": [
      "app/services.py",
      "apps/*/services.py",
      "*/services.py"
    ],
    "component_globs": [
      "app/models.py",
      "app/utils.py",
      "apps/*/models.py",
      "apps/*/utils.py",
      "*/models.py",
      "*/utils.py"
    ],
    "workflow_globs": [
      "app/tasks.py",
      "apps/*/tasks.py",
      "*/tasks.py"
    ],
    "exclude_patterns": [
      "**/__pycache__",
      "**/*.pyc",
      "**/.*",
      "**/test_*",
      "**/tests/**",
      "**/.venv",
      "**/venv",
      "**/*.egg-info",
      "*/migrations/**"
    ]
  },
  "frontend": {
    "api_calls": {
      "patterns": [
        "fetch\\(['\"](?:/[^'\"]*)",
        "axios\\.(get|post|put|delete|patch)\\(['\"](?:/[^'\"]*)",
        "fetch\\(`(?:/[^`]*)",
        "api\\.(?:get|post|put|delete)\\(['\"](?:/[^'\"]*)"
      ]
    },
    "search_roots": [
      "frontend/",
      "src/",
      "static/",
      "templates/"
    ],
    "file_patterns": [
      "**/*.svelte",
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx"
    ],
    "exclude_patterns": [
      "**/node_modules",
      "**/.svelte-kit",
      "**/dist",
      "**/build",
      "**/.venv",
      "**/.*",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  },
  "tracing": {
    "max_depth": 10,
    "include_patterns": [
      "app.*",
      "apps.*",
      "services.*",
      "utils.*"
    ],
    "exclude_modules": [
      "logging",
      "sys",
      "os",
      "json",
      "pathlib",
      "typing",
      "functools",
      "operator",
      "django"
    ],
    "follow_imports": true,
    "show_external": false,
    "show_stdlib": false
  }
}
