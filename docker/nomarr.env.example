# Nomarr Environment Variables
# Copy to nomarr.env and customize

# ArangoDB connection
# Host URL - the container name on the internal Docker network
ARANGO_HOST=http://nomarr-arangodb:8529

# Root password - REQUIRED for first-run provisioning only
# Must match the value in nomarr-arangodb.env
# After first run, app generates its own password and stores it in config/nomarr.yaml
ARANGO_ROOT_PASSWORD=change_this_root_password_in_production
